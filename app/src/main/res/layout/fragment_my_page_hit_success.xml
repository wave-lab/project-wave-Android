<LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:id="@+id/rl_my_page_hit_success_tabbar"
            android:layout_width="match_parent"
            android:layout_height="56dp">

        <ImageView
                android:id="@+id/img_hit_success_btn_back"
                android:src="@drawable/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"/>


        <TextView
                android:fontFamily="@font/noto_sans_kr_bold_hestia"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:text="평가 적중결과"
                android:includeFontPadding="false"
                android:layout_width="108dp"
                android:layout_height="27dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="6sp"
                android:gravity="center_horizontal"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_my_page_hit_success_score_tab"
            android:layout_width="match_parent"
            android:layout_height="52dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:lineSpacingExtra="65sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:layout_alignParentRight="true"
                android:layout_marginRight="71dp"
                android:layout_marginTop="16dp"
                android:text="평균 점수"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:lineSpacingExtra="65sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="나의 점수"
        />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_my_page_hit_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>