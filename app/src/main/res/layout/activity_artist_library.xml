<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="56dp">
        <ImageView
                android:id="@+id/img_scoring_passed_btn_back"
                android:src="@drawable/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="아티스트의 보관함 "
                  android:fontFamily="@font/noto_sans_kr_bold_hestia"
                  android:textSize="18sp"
                  android:shadowColor="#ffffff"
                  android:lineSpacingExtra="6sp"
                  android:gravity="center"
                  android:layout_centerInParent="true"
        />


    </RelativeLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tl_artist_library"
            android:layout_width="match_parent" android:layout_height="56dp">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager android:id="@+id/vp_artist_library"
            android:layout_width="match_parent"
                                       android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>