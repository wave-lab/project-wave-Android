<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_height="136dp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:text="신고하시겠습니까?"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:fontFamily="@font/noto_sans_kr_bold_hestia"
            android:includeFontPadding="false"
            android:textColor="#616161"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_report_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="취소"
            android:textColor="#616161"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:gravity="center"
            android:includeFontPadding="false"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            />

        <TextView
            android:id="@+id/tv_report_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="신고"
            android:textColor="#00b6de"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:gravity="center"
            android:includeFontPadding="false"
            />

    </LinearLayout>

</LinearLayout>