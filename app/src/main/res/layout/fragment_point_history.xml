<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/rl_point_history_tool"
            android:layout_width="match_parent"
            android:layout_height="56dp">
        <ImageView
                android:id="@+id/img_point_history_btn_back"
                android:src="@drawable/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"/>
        <TextView
                android:fontFamily="@font/noto_sans_kr_bold_hestia"
                android:text="포인트 내역"
                android:textSize="18sp"
                android:lineSpacingExtra="6sp"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="56dp">
        <TextView
                android:id="@+id/tv_point_history_cnt"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="19dp"
                android:text="적립 포인트"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_point_history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="108dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>