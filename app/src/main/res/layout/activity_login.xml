<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="#000000">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/iv_email_login_act_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/btn_login_beforenav"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/dmd"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/noto_sans_kr_bold_hestia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:textColor="#fafafa"
            android:text="다시 오신걸 환영해요"/>
        <View
            android:layout_width="65dp"
            android:layout_height="3dp"
            android:background="#00b6de"
            android:layout_below="@+id/dmd"
            android:layout_alignRight="@+id/dmd"
            android:paddingBottom="16dp"/>
        <TextView
            android:layout_below="@+id/dmd"
            android:fontFamily="@font/noto_sans_kr_bold_hestia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fafafa"
            android:gravity="center_horizontal"
            android:text="새롭고 핫한 커버곡들을 만나볼까요?"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:layout_marginTop="180dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:lineSpacingExtra="6sp"
            android:text="아이디"/>
        <EditText
            android:id="@+id/edt_id_act_email_login"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/signup_border_off"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="#CECECE"
            android:hint="wave@naver.com"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">
        <TextView
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:layout_marginTop="246dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:lineSpacingExtra="6sp"
            android:text="비밀번호"/>
        <EditText
            android:id="@+id/edt_pw_act_email_login"
            android:layout_height="24dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/signup_border_off"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="#CECECE"
            android:inputType="textPassword"
            android:hint="*******"/>
    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_submit_act_login"
        android:layout_height="44dp"
        android:layout_width="220dp"
        android:textSize="14dp"
        android:background="@drawable/email_login_btn"
        android:layout_marginTop="634dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="로그인"/>
</RelativeLayout>
