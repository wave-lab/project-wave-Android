<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#70000000"
        android:layout_height="match_parent">
    <View
            android:layout_marginTop="340dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc000000"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="142dp"
            android:background="#000000"
        android:layout_above="@+id/ll_library_more_act_middle"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_library_more_act_title"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
            android:text="WARNING! - Day6(데이식스)"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:includeFontPadding="false"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/tv_library_more_act_artist"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#616161"
                android:lineSpacingExtra="6sp"
            android:text="blotto_archyan"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:includeFontPadding="false"
            />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="right">
            <ImageView
                    android:id="@+id/iv_library_more_act_like"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/like_selector"
                    android:layout_marginRight="25dp"/>
            <ImageView
                    android:id="@+id/iv_library_more_act_share"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/btn_threedot_share"
                    android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:id="@+id/iv_library_more_act_image"
            android:src="@drawable/library_artist"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_border_more_info"
            android:layout_width="82dp"
            android:layout_height="82dp"
        android:layout_above="@+id/ll_library_more_act_middle"
        android:layout_marginBottom="119dp"
        />
    <LinearLayout
        android:id="@+id/ll_library_more_act_middle"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_above="@+id/bt_library_more_act_cancel"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:background="#000000"
            android:orientation="vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
            android:background="#333333"
            />
        <LinearLayout
                android:id="@+id/ll_library_more_act_play_list"
                android:layout_width="match_parent"
                android:layout_height="24dp"
            android:layout_marginTop="22dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_plus"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:includeFontPadding="false"
                    android:text="플레이리스트에 추가"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_library_more_act_artist_profile"
                android:layout_width="match_parent"
                android:layout_height="24dp"
            android:layout_marginTop="22dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_mypage"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:includeFontPadding="false"
                    android:text="아티스트 프로필 추가"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_library_more_act_delete"
                android:layout_width="match_parent"
                android:layout_height="24dp"
            android:layout_marginTop="22dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bt_close"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:includeFontPadding="false"
                    android:text="삭제"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_library_more_act_notify"
                android:layout_width="match_parent"
                android:layout_height="24dp"
            android:layout_marginTop="22dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_report"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:includeFontPadding="false"
                    android:text="신고"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginTop="22dp"
                android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/bt_library_more_act_cancel"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:text="취소"/>
</RelativeLayout>
