<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_8"
    tools:context=".StartActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
      />
    <TextView
        android:id="@+id/tv_start_act_login_btn"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:includeFontPadding="false"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="32dp"
        android:text="로그인"/>
    <ImageView
        android:layout_marginTop="121dp"
        android:layout_centerHorizontal="true"
        android:layout_width="225dp"
        android:layout_height="267dp"
        android:src="@drawable/icn_login_wavelogo"/>
    <TextView
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="3sp"
        android:includeFontPadding="false"
        android:gravity="center_horizontal"
        android:layout_marginTop="422dp"
        android:layout_centerHorizontal="true"
        android:text="WAVE에서
고퀄리티 커버곡을 무료로 즐기세요"/>
    <Button
        android:id="@+id/bt_start_act_email_login"
        android:fontFamily="@font/noto_sans_kr_bold_hestia"
        android:layout_centerHorizontal="true"
        android:layout_height="44dp"
        android:layout_width="244dp"
        android:textSize="16sp"
        android:background="@drawable/start_email_btn"
        android:layout_marginTop="506dp"
        android:textColor="#FFFFFF"
        android:text="이메일로 시작하기"/>

    <Button
        android:id="@+id/bt_start_act_scan_wave"
        android:layout_below="@+id/bt_start_act_email_login"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:layout_centerHorizontal="true"
        android:layout_height="44dp"
        android:layout_width="244dp"
        android:textSize="16sp"
        android:background="@drawable/start_scan_btn"
        android:layout_marginTop="20dp"
        android:textColor="#9e9e9e"
        android:text="WAVE 둘러보기"/>
</RelativeLayout>