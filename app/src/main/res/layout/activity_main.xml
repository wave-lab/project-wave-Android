<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_main_act_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_main_act_tab_bar"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>

    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:progressTint="@color/colorPrimary"
        android:layout_below="@+id/ll_main_act_top_layout"
        />

    <LinearLayout
            android:background="#000000"
        android:id="@+id/ll_main_act_tab_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_act_home_tab"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ib_main_act_home_tab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tab_btn_home_def"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:fontFamily="@font/noto_sans_kr_medium_hestia"
                android:textSize="9sp"
                android:textColor="#868686"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_act_search_tab"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ib_main_act_search_tab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tab_btn_search_active"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"
                android:fontFamily="@font/noto_sans_kr_medium_hestia"
                android:textSize="9sp"
                android:textColor="#00b6de"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_act_scoring_tab"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ib_main_act_scoring_tab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tab_btn_scoring_def"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가"
                android:fontFamily="@font/noto_sans_kr_medium_hestia"
                android:textSize="9sp"
                android:textColor="#868686"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_act_library_tab"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ib_main_act_library_tab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tab_btn_library_def"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관함"
                android:fontFamily="@font/noto_sans_kr_medium_hestia"
                android:textSize="9sp"
                android:textColor="#868686"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_main_act_mypage_tab"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ib_main_act_mypage_tab"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tab_btn_mypage_def"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:fontFamily="@font/noto_sans_kr_medium_hestia"
                android:textSize="9sp"
                android:textColor="#868686"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main_act_bottom_main_player"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#121212"
        android:orientation="horizontal"
        android:layout_above="@+id/ll_main_act_tab_bar"
        >

        <ImageView
            android:id="@+id/iv_main_act_bottom_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/btn_play_sm"/>

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="35.5dp"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_main_act_bottom_title_origin_artist"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="Song Name - Original Artist"
                android:fontFamily="@font/noto_sans_kr_bold_hestia"
                android:includeFontPadding="false"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv_main_act_bottom_cover_artist"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Cover Artist"
                android:textSize="12sp"
                android:fontFamily="@font/noto_sans_kr_regular_hestia"
                android:includeFontPadding="false"
                />

        </LinearLayout>
        <Button
            android:id="@+id/iv_main_act_bottom_play_list"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_playlist_sm"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34.5dp"
            />

    </LinearLayout>

</RelativeLayout>