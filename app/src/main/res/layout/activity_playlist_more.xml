<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#cc000000"
        android:layout_height="698dp">
    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc000000"
            android:visibility="gone" />
    <LinearLayout
            android:layout_marginTop="430.9dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="142dp"
            android:background="#000000"
            android:orientation="vertical" >
        <TextView
                android:id="@+id/tv_playlist_more_act_title"
                android:layout_marginTop="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="Play List Name"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/tv_playlist_more_act_artist"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#616161"
                android:lineSpacingExtra="6sp"
                tools:text="한 줄 설명이 들어가는 텍스트필드입니다."/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="right">
            <ImageView
                    android:id="@+id/iv_playlist_more_act_share"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/btn_threedot_share"
                    android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/img_border_more_info"
            android:src="@drawable/playlist_atrist"
            android:id="@+id/iv_artist_act_nav"
            android:layout_marginTop="372dp"/>
    <LinearLayout
            android:layout_marginTop="573dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:background="#000000"
            android:orientation="vertical">
        <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"/>
        <LinearLayout
                android:id="@+id/ll_playlist_more_act_delete"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bt_close"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="삭제"/>
        </LinearLayout>
        <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"/>
        <Button
                android:id="@+id/bt_playlist_more_act_cancel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:text="취소"/>
    </LinearLayout>
</RelativeLayout>