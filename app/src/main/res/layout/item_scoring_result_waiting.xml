<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
>
    <ImageView
            android:id="@+id/iv_scoring_waiting_song_item_cover"
            android:scaleType="centerCrop"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/img_artwork_1"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <TextView
            android:id="@+id/tv_scoring_waiting_song_item_origin_song_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:text="Song Name - 류지훈"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_scoring_waiting_song_item_cover"
            android:fontFamily="@font/noto_sans_kr_bold_hestia"
            android:includeFontPadding="false"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/tv_scoring_waiting_song_item_corver_field"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="힙합  재즈  일렉트로닉"
            android:layout_below="@+id/tv_scoring_waiting_song_item_origin_song_info"
            android:layout_toRightOf="@+id/iv_scoring_waiting_song_item_cover"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:textColor="#979797"
            android:includeFontPadding="false"
    />

    <ImageView
            android:id="@+id/iv_scoring_waiting_song_item_more_btn"
            android:layout_width="24dp" android:layout_height="24dp"
            android:src="@drawable/btn_threedot"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
    />

</RelativeLayout>