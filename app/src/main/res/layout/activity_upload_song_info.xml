<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

    <include
            layout="@layout/toolbar_mypage"/>

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout
                    android:id="@+id/rl_upload_song_info_comment"
                    android:visibility="gone"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:fontFamily="@font/noto_sans_kr_bold_hestia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#fafafa"
                        android:lineSpacingExtra="9sp"
                        android:text="코멘트를 통해 리스너들에게\n
커버곡을 소개해주세요!"/>
                <View android:layout_width="51dp" android:layout_height="3dp"
                      android:background="@color/colorPrimary" android:layout_alignParentStart="true"
                      android:layout_centerVertical="true"/>
            </RelativeLayout>
            //코멘트

            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_upload_song_info_origin_artist"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/fffff"
                        android:fontFamily="@font/noto_sans_kr_bold_hestia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#fafafa"
                        android:lineSpacingExtra="9sp"
                        android:text="원곡 아티스트를 입력 해 주세요!"/>
                <View
                        android:layout_below="@+id/fffff"
                        android:layout_width="104dp" android:layout_height="3dp"
                        android:background="@color/colorPrimary" android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            //가수

            <RelativeLayout
                    android:id="@+id/rl_upload_song_info_origin_title"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/ggggggg"
                        android:fontFamily="@font/noto_sans_kr_bold_hestia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#fafafa"
                        android:lineSpacingExtra="9sp"
                        android:text="원곡 타이틀 입력 해 주세요!"/>

                <View
                        android:layout_below="@+id/ggggggg"
                        android:layout_width="88dp" android:layout_height="3dp"
                        android:background="@color/colorPrimary" android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            //곡명
        </RelativeLayout>
        //ment

        <LinearLayout
                android:id="@+id/ll_upload_song_info_act_info_all"
                android:layout_marginTop="120dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/rl_upload_song_info_origin_comment_edt"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                    android:layout_marginVertical="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"
                        android:lineSpacingExtra="6sp"
                        android:text="코멘트(100자)"/>
                <EditText android:layout_marginTop="24dp"
                          android:id="@+id/et_upload_song_info_comment"
                          android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@null"/>
                <View
                        android:id="@+id/view_comment"
                        android:layout_below="@+id/et_upload_song_info_comment"
                        android:layout_width="match_parent" android:layout_height="3dp"
                        android:background="@color/colorPrimary"/>
            </RelativeLayout>
            //코멘트

            <RelativeLayout
                    android:id="@+id/rl_upload_song_info_origin_singer_edt"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                    android:layout_marginVertical="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"
                        android:lineSpacingExtra="6sp"
                        android:text="원곡가수"/>
                <EditText
                        android:id="@+id/et_upload_song_info_origin_singer"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:background="@null"/>
                <View
                        android:id="@+id/view_singer"
                        android:layout_below="@+id/et_upload_song_info_origin_singer"
                        android:layout_width="match_parent" android:layout_height="3dp"
                        android:background="@color/colorPrimary"/>
            </RelativeLayout>
            //가수

            <RelativeLayout
                    android:id="@+id/rl_upload_song_info_origin_title_edt"
                    android:layout_marginVertical="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"
                        android:lineSpacingExtra="6sp"
                        android:text="원곡명"/>
                <EditText android:layout_marginTop="24dp"
                          android:id="@+id/et_upload_song_info_origin_title"
                          android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@null"/>
                <View
                        android:id="@+id/view_title"
                        android:layout_below="@+id/et_upload_song_info_origin_title"
                        android:layout_width="match_parent" android:layout_height="3dp"
                        android:background="@color/colorPrimary"/>
            </RelativeLayout>
            //곡명

        </LinearLayout>
        //edt

    </RelativeLayout>

    </LinearLayout>
    <ImageView
            android:id="@+id/iv_upload_song_info_act_confirm_btn"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/btn_login_login"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>